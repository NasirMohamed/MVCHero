@model WebApplication1.Models.HeroList

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm()) 
{
    <h4>Hero</h4>
    <hr />
    <div class="jumbotron">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(m => m.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>
        @Html.LabelFor(m => m.YearCreated)
        @Html.EditorFor(m => m.YearCreated)

        @Html.LabelFor(m => m.Medium)
        @Html.EditorFor(m => m.Medium)

        @Html.LabelFor(m => m.Founder)
        @Html.EditorFor(m => m.Founder)

        @Html.LabelFor(m => m.Picture)
        @Html.EditorFor(m => m.Picture)

        <p>Tip: Add a URL for the image</p>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create Hero" class="btn btn-default" />
            </div>
        </div>
    </div>
}
@Html.ActionLink("Back to List", "Index")