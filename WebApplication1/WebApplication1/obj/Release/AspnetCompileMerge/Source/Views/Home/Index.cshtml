@model IEnumerable<WebApplication1.Models.HeroList>

@{
    ViewBag.Title = "Index";
}

<h2>Heroes</h2>
<p>
    @Html.ActionLink("Create New", "Create")

    @using (Html.BeginForm())
    {
    <p>
        Medium: @Html.DropDownList("heroMedium", "All")
        Name: @Html.TextBox("SearchString")
        <input type="submit" value="Filter" />
    </p>
    }
    </p>

    <table class="table jumbotron">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.YearCreated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Medium)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Founder)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Picture)
            </th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(m => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(m => item.YearCreated)
                </td>
                <td>
                    @Html.DisplayFor(m => item.Medium)
                </td>
                <td>
                    @Html.DisplayFor(m => item.Founder)
                </td>
                <td>
                   <img src="@Url.Content(item.Picture)" height="100" />
                </td>
                <td>
                    @Html.ActionLink("Edit Hero", "Edit", new { id = item.Id })
                    <br />
                    @Html.ActionLink("Details of Hero", "Details", new { id = item.Id })
                    <br />
                    @Html.ActionLink("Delete Hero", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </table>